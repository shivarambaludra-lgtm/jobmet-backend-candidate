# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/jobmet
# For local development without Docker, you can use SQLite:
# DATABASE_URL=sqlite:///./jobmet.db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=jobmet

# API Configuration
PROJECT_NAME=JobMet.AI Backend
API_V1_PREFIX=/api/v1
DEBUG=True

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-key-here

# Optional: Use GPT-3.5 for cost savings during development
# OPENAI_MODEL=gpt-3.5-turbo

# Security (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-generate-a-real-one

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
